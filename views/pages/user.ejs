        appId: "1:79320774776:web:8daa68fc748b367449d58d",
        measurementId: "G-1TNPJN728L",
      };
      // Initialize Firebase
      firebase.initializeApp(firebaseConfig);

      //make auth & firestore refs
      const db = firebase.firestore();
      var room = "<%- room %>";
      console.log(room);
      var docRef = db.collection("rooms").doc(room);
      docRef
        .get()
        .then(function (doc) {
          if (doc.exists) {
            $("#name").html("Room : " + doc.data().name);

            $("#rn").val(doc.data().name);
          } else {
            // doc.data() will be undefined in this case
            console.log("No such document!");
          }
        })
        .catch(function (error) {
          console.log("Error getting document:", error);
        });
